#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

# Load nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"

echo "ğŸ” Running pre-push checks..."

# Type checking
echo "ğŸ“ Type checking..."
pnpm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type check failed"
  exit 1
fi

# Linting
echo "ğŸ” Linting..."
pnpm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Lint failed"
  exit 1
fi

echo "âœ… All pre-push checks passed!"